{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MyBudy",
  "version": "0.1.0",
  "identifier": "com.mybudy.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "MyBudy",
        "width": 900,
        "height": 700,
        "minWidth": 400,
        "minHeight": 500,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  },
  "plugins": {}
}
